!include suite/xcluster/my.cnf

[mysqld]
consensus_large_trx=ON
consensus_check_large_event=ON
max_allowed_packet=1G
replica_pending_jobs_size_max=1G
replica_max_allowed_packet=1G
consensus_large_trx_split_size=100K
consensus_large_event_split_size=100K
consensus_max_log_size=1M
consensus_large_event_size_limit=100M
consensus_prefetch_fast_fetch=ON
consensus_disable_fifo_cache=ON
